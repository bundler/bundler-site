- data_source ||= "navigation"

%nav(role="navigation" class="navbar navbar-default navbar-static-top")
  .container-fluid
    .navbar-header
      %button.navbar-toggle( type="button" data-toggle="collapse" data-target=".navbar-ex-collapse" )

        %span.sr-only Toggle navigation

        - 3.times do
          %span.icon-bar

      %a.navbar-brand(href="/" alt="Bundler")
        = data.site.name
        -# %img(class="" src="/images/bundler-small.png")

    %nav.collapse.navbar-collapse.navbar-ex-collapse
      %ul.nav.navbar-nav
        - data[data_source].each do |item|

          -item.each do |text, link|
            %li= link_to("#{text}", "#{link}", class: text.parameterize)

        %li.dropdown
          %a.dropdown-toggle( href="#help" title="help" data-toggle="dropdown" )
            Github
            %b.caret
          %ul.dropdown-menu
            %li= link_to("Site Repo", data.bundler.site.repo)
            %li= link_to("Site Issues", data.bundler.site.issues)
            %span.divider
            %li= link_to("Bundler Repo", data.bundler.master)
            %li= link_to("Bundler Issues", data.bundler.issues)
